using Gtk 4.0;
using Adw 1;

template $PebblesScientificView: Gtk.Grid {
  $PebblesDisplay display {
    layout {
      column: 0;
      row: 0;
    }

    vexpand: true;
  }

  Adw.NavigationSplitView sci_nav_split_view {
    layout {
      column: 0;
      row: 1;
    }

    margin-start: 12;
    margin-bottom: 12;
    vexpand: true;
    height-request: 250;
    sidebar-width-fraction: 0.5;
    max-sidebar-width: 1000000;
    min-sidebar-width: 256;
    collapsed: bind template.collapsed;

    sidebar: Adw.NavigationPage button_container_left {
      title: "Numerical Input";
      hexpand: true;
      margin-end: 12;

      Grid {
        row-homogeneous: true;
        column-homogeneous: true;
        row-spacing: 4;
        column-spacing: 4;
        vexpand: true;
        hexpand: true;

        $PebblesStyledButton all_clear_button {
          label_text: _("AC");
          tooltip_desc: _("All Clear");
          accel_markup: "Delete";

          styles [
            "destructive-action"
          ]

          layout {
            row: 0;
            column: 0;
          }
        }

        Button del_button {
          icon-name: "edit-clear-symbolic";
          tooltip-text: _("Backspace");

          layout {
            row: 0;
            column: 1;
          }
        }

        $PebblesStyledButton percent_button {
          label_text: "%";
          tooltip_desc: _("Percentage");

          layout {
            row: 0;
            column: 2;
          }
        }

        $PebblesStyledButton divide_button {
          label_text: "÷";
          tooltip_desc: _("Divide");

          layout {
            row: 0;
            column: 3;
          }
        }

        $PebblesStyledButton memory_plus_button_p {
          label_text: "M+";
          tooltip_desc: _("Add it to the value in Memory");
          accel_markup: "F3";
          visible: bind template.collapsed;

          styles [
            "memory-action"
          ]

          layout {
            row: 0;
            column: 4;
          }
        }

        $PebblesStyledButton seven_button {
          label_text: "7";

          layout {
            row: 1;
            column: 0;
          }
        }

        $PebblesStyledButton eight_button {
          label_text: "8";

          layout {
            row: 1;
            column: 1;
          }
        }

        $PebblesStyledButton nine_button {
          label_text: "9";

          layout {
            row: 1;
            column: 2;
          }
        }

        $PebblesStyledButton multiply_button {
          label_text: "×";
          tooltip_desc: _("Multiply");

          layout {
            row: 1;
            column: 3;
          }
        }

        $PebblesStyledButton memory_minus_button_p {
          label_text: _("M−");
          tooltip_desc: _("Subtract it from the value in Memory");
          accel_markup: "F4";
          visible: bind template.collapsed;

          styles [
            "memory-action"
          ]

          layout {
            row: 1;
            column: 4;
          }
        }

        $PebblesStyledButton four_button {
          label_text: "4";

          layout {
            row: 2;
            column: 0;
          }
        }

        $PebblesStyledButton five_button {
          label_text: "5";

          layout {
            row: 2;
            column: 1;
          }
        }

        $PebblesStyledButton six_button {
          label_text: "6";

          layout {
            row: 2;
            column: 2;
          }
        }

        $PebblesStyledButton subtract_button {
          label_text: "−";
          tooltip_desc: _("Subtract");

          layout {
            row: 2;
            column: 3;
          }
        }

        $PebblesStyledButton memory_recall_button_p {
          label_text: _("MR");
          tooltip_desc: _("Recall value from Memory");
          accel_markup: "F5";
          visible: bind template.collapsed;

          styles [
            "memory-action"
          ]

          layout {
            row: 2;
            column: 4;
          }
        }

        $PebblesStyledButton one_button {
          label_text: "1";

          layout {
            row: 3;
            column: 0;
          }
        }

        $PebblesStyledButton two_button {
          label_text: "2";

          layout {
            row: 3;
            column: 1;
          }
        }

        $PebblesStyledButton three_button {
          label_text: "3";

          layout {
            row: 3;
            column: 2;
          }
        }

        $PebblesStyledButton addition_button {
          label_text: "+";
          tooltip_desc: _("Add");

          layout {
            row: 3;
            column: 3;
          }
        }

        $PebblesStyledButton memory_clear_button_p {
          label_text: _("MC");
          tooltip_desc: _("Memory Clear");
          accel_markup: "F6";
          visible: bind template.collapsed;

          styles [
            "memory-action"
          ]

          layout {
            row: 3;
            column: 4;
          }
        }

        $PebblesStyledButton zero_button {
          label_text: "0";

          layout {
            row: 4;
            column: 0;
          }
        }

        $PebblesStyledButton point_button {
          label_text: ".";

          layout {
            row: 4;
            column: 1;
          }
        }

        $PebblesStyledButton paren_start_button {
          label_text: "(";

          layout {
            row: 4;
            column: 2;
          }
        }

        $PebblesStyledButton paren_end_button {
          label_text: ")";

          layout {
            row: 4;
            column: 3;
          }
        }

        $PebblesStyledButton result_button_p {
          label_text: _("=");
          tooltip_desc: _("Result");
          accel_markup: "Return";
          visible: bind template.collapsed;

          styles [
            "suggested-action",
            "large-font-btn"
          ]

          layout {
            row: 4;
            column: 4;
          }
        }
      }
    };

    content: Adw.NavigationPage button_container_right {
      title: "Functional Input";
      hexpand: true;
      margin-end: 12;

      Grid {
        row-homogeneous: true;
        column-homogeneous: true;
        row-spacing: 4;
        column-spacing: 4;
        vexpand: true;
        hexpand: true;

        ToggleButton shift_button {
          label: _("Shift");

          styles [
            "special-action"
          ]

          layout {
            row: 0;
            column: 0;
          }
        }

        $PebblesStyledButton pow_root_button {
          label_text: "x<sup>y</sup>";
          tooltip_desc: _("x raised to the power y");
          accel_markup: "Z";

          styles [
            "special-action"
          ]

          layout {
            row: 0;
            column: 1;
          }
        }

        $PebblesStyledButton expo_power_button {
          label_text: "10<sup>x</sup>";
          tooltip_desc: _("10 raised to the power x");
          accel_markup: "W";

          styles [
            "special-action"
          ]

          layout {
            row: 0;
            column: 2;
          }
        }

        $PebblesStyledButton memory_plus_button {
          label_text: "M+";
          tooltip_desc: _("Add it to the value in Memory");
          accel_markup: "F3";

          styles [
            "memory-action"
          ]

          layout {
            row: 0;
            column: 3;
          }
        }

        $PebblesStyledButton sin_button {
          label_text: "sin";
          tooltip_desc: _("Sine");
          accel_markup: "S";

          styles [
            "special-action"
          ]

          layout {
            row: 1;
            column: 0;
          }
        }

        $PebblesStyledButton sinh_root_button {
          label_text: "sinh";
          tooltip_desc: _("Hyberbolic Sine");
          accel_markup: "H";

          styles [
            "special-action"
          ]

          layout {
            row: 1;
            column: 1;
          }
        }

        $PebblesStyledButton log_cont_base_button {
          label_text: "log x";
          tooltip_desc: _("Log base 10");
          accel_markup: "L";

          styles [
            "special-action"
          ]

          layout {
            row: 1;
            column: 2;
          }
        }

        $PebblesStyledButton memory_minus_button {
          label_text: _("M−");
          tooltip_desc: _("Subtract it from the value in Memory");
          accel_markup: "F4";

          styles [
            "memory-action"
          ]

          layout {
            row: 1;
            column: 3;
          }
        }

        $PebblesStyledButton cos_button {
          label_text: "cos";
          tooltip_desc: _("Cosine");
          accel_markup: "C";

          styles [
            "special-action"
          ]

          layout {
            row: 2;
            column: 0;
          }
        }

        $PebblesStyledButton cosh_root_button {
          label_text: "cosh";
          tooltip_desc: _("Hyberbolic Cosine");
          accel_markup: "O";

          styles [
            "special-action"
          ]

          layout {
            row: 2;
            column: 1;
          }
        }

        $PebblesStyledButton log_mod_button {
          label_text: "Mod x";
          tooltip_desc: _("Modulus");
          accel_markup: "M";

          styles [
            "special-action"
          ]

          layout {
            row: 2;
            column: 2;
          }
        }

        $PebblesStyledButton memory_recall_button {
          label_text: _("MR");
          tooltip_desc: _("Recall value from Memory");
          accel_markup: "F5";

          styles [
            "memory-action"
          ]

          layout {
            row: 2;
            column: 3;
          }
        }

        $PebblesStyledButton tan_button {
          label_text: "tan";
          tooltip_desc: _("Tangent");
          accel_markup: "T";

          styles [
            "special-action"
          ]

          layout {
            row: 3;
            column: 0;
          }
        }

        $PebblesStyledButton tanh_root_button {
          label_text: "tanh";
          tooltip_desc: _("Hyberbolic Tangent");
          accel_markup: "A";

          styles [
            "special-action"
          ]

          layout {
            row: 3;
            column: 1;
          }
        }

        $PebblesStyledButton perm_comb_button {
          label_text: "<sup>n</sup>P<sub>r</sub>";
          tooltip_desc: _("Permutations");
          accel_markup: "P";

          styles [
            "special-action"
          ]

          layout {
            row: 3;
            column: 2;
          }
        }

        $PebblesStyledButton memory_clear_button {
          label_text: _("MC");
          tooltip_desc: _("Memory Clear");
          accel_markup: "F6";

          styles [
            "memory-action"
          ]

          layout {
            row: 3;
            column: 3;
          }
        }

        $PebblesStyledButton fact_button {
          label_text: "!";
          tooltip_desc: _("Factorial");
          accel_markup: "F";

          styles [
            "special-action"
          ]

          layout {
            row: 4;
            column: 0;
          }
        }

        $PebblesStyledButton constant_button {
          label_text: "C";
          tooltip_desc: _("Some Constant");
          accel_markup: "R";

          styles [
            "special-action"
          ]

          layout {
            row: 4;
            column: 1;
          }
        }

        $PebblesStyledButton last_answer_button {
          label_text: "Ans";
          tooltip_desc: _("Insert last answer");
          accel_markup: "F7";

          styles [
            "special-action"
          ]

          layout {
            row: 4;
            column: 2;
          }
        }

        $PebblesStyledButton result_button {
          label_text: _("=");
          tooltip_desc: _("Result");
          accel_markup: "Return";

          styles [
            "suggested-action",
            "large-font-btn"
          ]

          layout {
            row: 4;
            column: 3;
          }
        }
      }
    };
  }
}
